FROM golang:1.21-alpine AS builder
WORKDIR /app
COPY go.mod ./
COPY go.sum* ./
RUN go mod download || true
COPY . .
RUN CGO_ENABLED=0 go build -o api-server ./cmd/api-server

FROM alpine:latest
RUN apk --no-cache add ca-certificates
WORKDIR /root/
COPY --from=builder /app/api-server .
# gRPC port
EXPOSE 8080
# HTTP/REST port
EXPOSE 8081
CMD ["./api-server"]
